<?php if (Session::has('toast')): ?>
	<div class="toast-container">
		<?php
		$mensaje_tiempo = 5; 
		foreach (Session::get('toast') as $toast): 
            $uid = _str::uid();
        ?>
			<div class="toast-<?=$uid?>">
				<button type="button" class="transparent" data-remove="parent">
                    <?=_img::icon('md/close')?>
                </button>
				<h3>INFO</h3>
				<hr>
				<p><?=$toast?></p>
			</div>
			<script>
			setTimeout(function(){ 
                var el = document.querySelector('.toast-<?=$uid?>');
                if (el) {
                    el.style.transition = 'opacity 0.6s';
                    el.style.opacity = '0';
                    setTimeout(function(){ el.remove(); }, 8000);
                }
            }, <?=$mensaje_tiempo*1000?>);
			</script>
			<?php
			$mensaje_tiempo += 1;
		endforeach;
		Session::delete('toast'); ?>
	</div>
<?php endif; ?>
